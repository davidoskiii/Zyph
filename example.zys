
try {
    var number = num(input("Tell me a number: "))
} catch {
    print("The value provided is not a number")
    quit()
}

function factorial(n) {
    if (n == 0 or n == 1) {
        return 1
    } else {
        return n * factorial(n - 1)
    }
}

print("The factorial of " + str(number) + " is " + str(factorial(number)))
